<?xml version="1.0" encoding="UTF-8"?>
<settings xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.1.0 http://maven.apache.org/xsd/settings-1.1.0.xsd"
          xmlns="http://maven.apache.org/SETTINGS/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <servers>
        <!-- Credentials for Artifactory -->
        <server>
            <id>company-artifactory</id>
            <username>${env.ARTIFACTORY_USERNAME}</username>
            <password>${env.ARTIFACTORY_PASSWORD}</password>
        </server>
    </servers>

    <profiles>
        <profile>
            <id>repository-fallback</id>
            <repositories>
                <!-- First: Try company Artifactory -->
                <repository>
                    <id>company-artifactory</id>
                    <name>Company Artifactory</name>
                    <url>http://10.0.3.224:8082/artifactory/libs-release-local/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>

                <!-- Second: Fall back to Maven Central -->
                <repository>
                    <id>maven-central</id>
                    <name>Maven Central</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>

            <pluginRepositories>
                <!-- First: Try company Artifactory -->
                <pluginRepository>
                    <id>company-artifactory</id>
                    <name>Company Artifactory</name>
                    <url>http://10.0.3.224:8082/artifactory/libs-release-local/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>

                <!-- Second: Fall back to Maven Central -->
                <pluginRepository>
                    <id>maven-central</id>
                    <name>Maven Central</name>
                    <url>https://repo.maven.apache.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </pluginRepository>
            </pluginRepositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>repository-fallback</activeProfile>
    </activeProfiles>

    <!-- CRITICAL: Allow HTTP for internal Artifactory instead of required HTTPS -->
    <mirrors>
        <mirror>
            <id>maven-default-http-blocker</id>
            <mirrorOf>dummy</mirrorOf>
            <name>Dummy mirror to override default blocking mirror that blocks HTTP</name>
            <url>http://0.0.0.0/</url>
            <blocked>true</blocked>
        </mirror>
    </mirrors>

</settings>
