<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
    <Appenders>
        <!-- Console Appender - for all loggers via Root -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </Console>

        <!-- Rolling File Appender - for Piknik main application -->
        <RollingFile name="FILE" fileName="logs/piknik.log"
                     filePattern="logs/piknik.%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="1">
                    <IfFileName glob="piknik.*.log"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <!-- Ingenico IFSF Protocol Logger -->
        <RollingFile name="IfsfProt_RFA" fileName="logs/IngenicoIfsf.log"
                     filePattern="logs/IngenicoIfsf.%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>%d{ABSOLUTE}> [%-5p] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="1">
                    <IfFileName glob="IngenicoIfsf.*.log"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
            <!-- Filter out expected "Socket closed" shutdown messages -->
            <Filters>
                <RegexFilter regex=".*Socket closed.*" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
        </RollingFile>

        <!-- Ingenico Transit Protocol Logger -->
        <RollingFile name="IngenicoTransitProt_RFA" fileName="logs/IngenicoTransit.log"
                     filePattern="logs/IngenicoTransit.%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>%d{ABSOLUTE}> [%-5p] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="1">
                    <IfFileName glob="IngenicoTransit.*.log"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
            <!-- Filter out expected "Socket closed" shutdown messages -->
            <Filters>
                <RegexFilter regex=".*Socket closed.*" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
        </RollingFile>

        <!-- Audit Logger -->
        <RollingFile name="AuditAudit_RFA" fileName="logs/Audit.csv"
                     filePattern="logs/Audit.%d{yyyy-MM-dd}.csv">
            <PatternLayout>
                <Pattern>%m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="1">
                    <IfFileName glob="Audit.*.csv"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Piknik application package -->
        <Logger name="pik" level="DEBUG"/>

        <!-- Web framework - reduce noise -->
        <Logger name="io.javalin" level="INFO"/>
        <Logger name="org.eclipse.jetty" level="WARN"/>

        <!-- Ingenico IFSF Protocol -->
        <Logger name="IfsfProt" level="DEBUG" additivity="false">
            <AppenderRef ref="IfsfProt_RFA"/>
        </Logger>

        <!-- Ingenico Transit Protocol -->
        <Logger name="IngenicoTransitProt" level="DEBUG" additivity="false">
            <AppenderRef ref="IngenicoTransitProt_RFA"/>
        </Logger>

        <!-- Audit Logger -->
        <Logger name="AAudit" level="INFO" additivity="false">
            <AppenderRef ref="AuditAudit_RFA"/>
        </Logger>

        <!-- Root logger - with console and file output -->
        <Root level="DEBUG">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>
</Configuration>
