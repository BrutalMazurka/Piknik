<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="60">
    <Appenders>
        <!-- Console Appender - for Piknik main application -->
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
        </Console>

        <!-- Rolling File Appender - for Piknik main application -->
        <RollingFile name="FILE" fileName="logs/piknik.log"
                     filePattern="logs/piknik.%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy>
                <Delete basePath="logs" maxDepth="1">
                    <IfFileName glob="piknik.*.log"/>
                    <IfLastModified age="30d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>

        <!-- Protocol-specific appenders from external projects -->
        <RollingFile name="IfsfProt_RFA" fileName="logs/IngenicoIfsf"
                     filePattern="logs/IngenicoIfsf.%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>%d{ABSOLUTE}> [%-5p] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <!-- Filter out expected "Socket closed" shutdown messages -->
            <Filters>
                <RegexFilter regex=".*Socket closed.*" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
        </RollingFile>

        <RollingFile name="IngenicoTransitProt_RFA" fileName="logs/IngenicoTransit"
                     filePattern="logs/IngenicoTransit.%d{yyyy-MM-dd}.log">
            <PatternLayout>
                <Pattern>%d{ABSOLUTE}> [%-5p] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <!-- Filter out expected "Socket closed" shutdown messages -->
            <Filters>
                <RegexFilter regex=".*Socket closed.*" onMatch="DENY" onMismatch="NEUTRAL"/>
            </Filters>
        </RollingFile>

        <RollingFile name="AuditAudit_RFA" fileName="logs/Audit"
                     filePattern="logs/Audit.%d{yyyy-MM-dd}.csv">
            <PatternLayout>
                <Pattern>%m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Piknik application package - DEBUG level -->
        <Logger name="pik" level="DEBUG"/>

        <!-- JavaPOS debugging -->
        <Logger name="jpos" level="DEBUG"/>

        <!-- Web framework - reduce noise -->
        <Logger name="io.javalin" level="INFO"/>
        <Logger name="org.eclipse.jetty" level="WARN"/>

        <!-- Protocol-specific loggers from external projects -->
        <Logger name="IfsfProt" additivity="false">
            <AppenderRef ref="IfsfProt_RFA"/>
        </Logger>

        <Logger name="IngenicoTransitProt" additivity="false">
            <AppenderRef ref="IngenicoTransitProt_RFA"/>
        </Logger>

        <Logger name="AAudit" additivity="false">
            <AppenderRef ref="AuditAudit_RFA"/>
        </Logger>

        <!-- Root logger - INFO level with console and file output -->
        <Root level="INFO">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>
</Configuration>
